<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <!-- Section: Design Block -->
<section class=" text-center ">

  <div class="card mb-3" id="form-box">
    <div class="row  d-flex align-items-center">
      <div class="col-md-5 d-none d-lg-flex">
        <img src="https://th.bing.com/th/id/OIP.vbmHjn0ukCNWTVBJLy1LvQHaH_?pid=ImgDet&w=538&h=581&rs=1" alt="Trendy Pants and Shoes"
          class="rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" id="image"/>
      </div>
      <div class="col-lg-4">
        <div class="card-body  py-5 px-md-5">

          <form action="/users" method="POST" role="form">
            <!-- Email input -->
            <div class="form-outline mb-4">
              <input type="email" id="email" class="form-control" name="email" placeholder="Email address" required />
              
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
              <input type="password" id="password" class="form-control" name="password" placeholder="Password" required/>
              
            </div>

            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
              <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                  <label class="form-check-label" for="form2Example31"> Remember me </label>
                </div>
              </div>

              <div class="col">
                <!-- Simple link -->
                <a id="forgot"   href="#!">Forgot password?</a>
              </div>
            </div>

            <!-- Submit button -->
            <div class="d-grid col-6 ">
                <input type="submit" class="btn btn-primary btn-block mb-4 " id="button" value="Log in">
            </div>
            

          </form>

        </div>
      </div>
    </div>
  </div>
</section>


<!-- Section: Design Block -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>